---
interface Props {
	date: string; // ✅ Date型ではなくstring型で受け取る
}

const { date } = Astro.props;
const parsedDate = new Date(date); // ✅ ここでstring→Date型に変換
---

<time datetime={parsedDate.toISOString()}>
	{
		parsedDate.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>